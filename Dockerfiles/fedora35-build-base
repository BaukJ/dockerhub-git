##### Create a base image for all the centos intermediate build containers
FROM bauk/git:fedora35-base
RUN yum install -y make gcc autoconf wget \
    perl-ExtUtils-MakeMaker \
    asciidoc xmlto \
    gettext-devel zlib-devel openssl-devel expat-devel curl-devel perl-devel \
 && yum clean all
# For docs: asciidoc xmlto docbook2X(needs EPEL)
# Removed: emacs libgnome-keyring python2 pcre2
WORKDIR /build
